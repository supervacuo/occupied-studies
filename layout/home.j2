{% extends "base.j2" %}
{% block js %}
	{{ super() }}
	<script type="text/javascript">
		$(document).ready(function() {
			$('div#index ol li a, p.top a, p.next a').live('click tap', function() {
				var destination = $(this).attr("href");
				$('html,body').animate({	
					scrollTop: $(destination).offset().top + 1
				}, 1000, "easeInOutQuad");
			});
		});
	</script>
{% endblock js %}
{% block content %}
	<div id='index' class='page'>
		<h1>Journal of Occupied Studies</h1>	
		<ol>
			<li id='nav_strategy'><a href='#strategy'>Strategy</a></li>
			<li id='nav_iconography'><a href='#iconography'>Iconography</a></li>
			<li id='nav_history'><a href='#history'>History</a></li>
			<li id='nav_people'><a href='#people'>People</a></li>
			<li id='nav_critique'><a href='#critique'>Critique</a></li>
			<li id='nav_resources'><!--<a href='#resources'>Resources</a>--><em>?</em></li>
		</ol>
		<p id='copyright'>
			Some rights reserved (CC-BY-SA)
		</p>
	</div>
	<div id='strategy'>
		<p class='top'><a href='#index'>&uarr; Top</a></p>
		<h2>Strategy</h2>
		<blockquote class='preamble sweet-justice'>
			What this movement is about is that even the democratic institutions we do
			have now have been corrupted by big money, and in the same way our
			movement would be corrupted if we were subsumed into that same political
			system. We have to maintain the integrity of this experiment.
			<span>&mdash; David Graeber</span>
		</blockquote>
		<hr class='lock' />
		{% for resource in site.tagger.tags.strategy.resources|sort(attribute='meta.created',reverse=true) %}
		<div class='article{{ loop.cycle('', ' right') }}'>
			<img src='{{ media_url('img/profile/'+resource.meta.profile_img) }}' alt='{{ resource.meta.author }}' />
			<h3><a href='{{ resource.url }}'>{{ resource.meta.title|e }}</a></h3>
			<p class='byline'>{{ resource.meta.author }}, {{ resource.meta.organisation }}</p>
			<p>
				{{ resource.meta.description|markdown }}
			</p>
			<p class='read_more'>
				<a href='{{ resource.url }}'>Read more &rarr;</a>
			</p>
		</div>
		{% endfor %}
		<p class='next'><a href='#iconography'>Iconography &darr;</a></p>
	</div>
	<div id='iconography'>
		<p class='top'><a href='#index'>&uarr; Top</a></p>
		<h2>Iconography</h2>
		{% for resource in site.tagger.tags.iconography.resources|sort(attribute='meta.created',reverse=true) %}
		<div class='article {{ loop.cycle('first', ' right') }} first'>
			<img src='{{ media_url('img/profile/'+resource.meta.profile_img) }}' alt='{{ resource.meta.author }}' />
			<h3><a href='{{ resource.url }}'>{{ resource.meta.title|e }}</a></h3>
			<p class='byline'>{{ resource.meta.author }}, {{ resource.meta.organisation }}</p>
			<p>
				{{ resource.meta.description|markdown }}
			</p>
			<p class='read_more'>
				<a href='{{ resource.url }}'>Read more &rarr;</a>
			</p>
		</div>
		{% if not loop.last or loop.length == 1 %}
		<hr class='gear' />
		{% endif %}
		{% endfor %}
		<p class='next'><a href='#history'>History &darr;</a></p>
	</div>
	<div id='history'>
		<p class='top'><a href='#index'>&uarr; Top</a></p>
		<h2>History</h2>
		<img id='timeline' src='{{ media_url('img/timeline.png') }}' alt='Occupy Wall Street timeline' />
		{% with resource=site.tagger.tags.history.resources|sort(attribute='meta.created',reverse=true)|first %}
		<div class='article first'>
			<img src='{{ media_url('img/profile/'+resource.meta.profile_img) }}' alt='{{ resource.meta.author }}' />
			<h3><a href='{{ resource.url }}'>{{ resource.meta.title|e }}</a></h3>
			<p class='byline'>{{ resource.meta.author }}, {{ resource.meta.organisation }}</p>
			<p>
				{{ resource.meta.description|markdown }}
			</p>
			<p class='read_more'>
				<a href='{{ resource.url }}'>Read more &rarr;</a>
			</p>
		</div>
		{% endwith %}
		<p class='next'><a href='#people'>People &darr;</a></p>
	</div>
	<div id='people'>
		<p class='top'><a href='#index'>&uarr; Top</a></p>
		<h2>People</h2>
		{% for resource in site.tagger.tags.people.resources|sort(attribute='meta.created',reverse=true) %}
		<div class='article {{ loop.cycle('first', 'right') }}'>
			<img src='{{ media_url('img/profile/'+resource.meta.profile_img) }}' alt='{{ resource.meta.author }}' />
			<h3><a href='{{ resource.url }}'>{{ resource.meta.title|e }}</a></h3>
			<p class='byline'>{{ resource.meta.author }}, {{ resource.meta.organisation }}</p>
			<p>
				{{ resource.meta.description|markdown }}
			</p>
			<p class='read_more'>
				<a href='{{ resource.url }}'>Read more &rarr;</a>
			</p>
		</div>
		{% endfor %}
		<p class='next'><a href='#critique'>Critique &darr;</a></p>
	</div>
	<div id='critique'>
		<p class='top'><a href='#index'>&uarr; Top</a></p>
		<h2>Critique</h2>
		<blockquote class='preamble'>
			Maecenas justo tortor, ullamcorper vel porta ut
			<span>&mdash; Samuel L. Jackson</span>
		</blockquote>
		<hr class='gear' />
		{% for resource in site.tagger.tags.critique.resources|sort(attribute='meta.created',reverse=true) %}
		<div class='article{{ loop.cycle('', ' right') }}'>
			<img src='{{ media_url('img/profile/'+resource.meta.profile_img) }}' alt='{{ resource.meta.author }}' />
			<h3><a href='{{ resource.url }}'>{{ resource.meta.title|e }}</a></h3>
			<p class='byline'>{{ resource.meta.author }}, {{ resource.meta.organisation }}</p>
			<p>
				{{ resource.meta.description|markdown }}
			</p>
			<p class='read_more'>
				<a href='{{ resource.url }}'>Read more &rarr;</a>
			</p>
		</div>
		{% endfor %}
		<!--<p class='next'><a href='#resources'>Resources &darr;</a></p>-->
	</div>
